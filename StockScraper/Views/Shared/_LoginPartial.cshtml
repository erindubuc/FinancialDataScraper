@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    
    <ul class="nav navbar-nav navbar-right mr-auto">
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", Style="color:White; font-size: 16px" })
        </li>
        <li class="nav-item">
            <a href="javascript:document.getElementById('logoutForm').submit()" style="color:white; font-size: 16px;">Log off</a>
        </li>

        <!-- Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-item dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown" style="color:white; font-size: 16px;">
                Yahoo!
            </a>
            <div class="dropdown-menu" style="background-color:inherit; border: none;">
                <a class="dropdown-item" href="#">
                    @Html.ActionLink("Current Info", "Index", "CurrentStockInfoes", new { @class = "nav-link" }, new { Style = "color:White; font-size: 16px" })
                </a>
                <a class="dropdown-item" href="#">
                    @Html.ActionLink("History", "Index", "HistoryOfStockInfoes", new { @class = "nav-link" }, new { Style = "color:White; font-size: 16px" })
                </a>

            </div>
        </li>

        <li class="nav-item">
            @Html.ActionLink("World Trading", "Index", "WorldTradingDatas", new { @class = "nav-link" }, new { Style = "color:White; font-size: 16px" })
        </li>



    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right mr-auto">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", 
                            routeValues: null, 
                            htmlAttributes: new { id = "registerLink", Style ="color: white; font-size: 16px" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", 
                            routeValues: null, 
                            htmlAttributes: new { id = "loginLink", Style ="color: white; font-size: 16px" })</li>
    </ul>
}
